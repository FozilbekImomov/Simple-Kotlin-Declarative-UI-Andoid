<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LibreFranklinBlack900">
        <item name="fontWeight">900</item>
        <item name="android:fontFamily">@font/libre_franklin_black</item>
    </style>

    <style name="LibreFranklinMedium500">
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="LibreFranklinExtraBold800">
        <item name="fontWeight">800</item>
        <item name="android:fontFamily">@font/libre_franklin_extra_bold</item>
    </style>

    <style name="LibreFranklinExtraBold700">
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/libre_franklin_bold</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="customRatingBarSVG" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>


    <declare-styleable name="TextViewOutline">
        <attr name="outlineSize" format="dimension" />
        <attr name="outlineColor" format="color|reference" />
        <attr name="android:shadowRadius" />
        <attr name="android:shadowDx" />
        <attr name="android:shadowDy" />
        <attr name="android:shadowColor" />
    </declare-styleable>

</resources>